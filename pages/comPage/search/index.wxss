/* pages/comPage/search/index.wxss */
page {
  color: #fff;
  background-color: rgba(0, 0, 0, 0.774);
}
.search_box {
  width: 100%;
  color: #888;
  border-radius: 10rpx;
  background-color: #ffff;
}

.search_icon_box {
  display: flex;
  height: 80rpx;
  padding: 0 20rpx;
  align-items: center;
  justify-content: center;
}

.search_txt {
  font-size: 14px;
  padding: 0 10rpx;
  height: 80rpx;
}

.search_input_box {
  flex: 1;
  font-size: 14px;
  background-color: #e8e8e8;
}
.search_txt_but{
  padding-left: 20rpx;
}

/* 搜索记录 */
.search_record_box {

}

.search_record_text {
  margin-top: 20rpx;
}

.search_record_list {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 0;

}

.search_record_item {
  padding: 10rpx;
  font-size: 12px;
  color: #fff;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  background-color: #999;
}
.search_record_item {
  margin-left: 20rpx;
}

.clear_record {
  width: 100%;
  color: #999;
  font-size: 12px;
  text-align: center;
}
/* pages/list/pages/myMusic/index.wxss */
.musicPlayBox{
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.774);
}
.play_header {
  width: 100%;
  height: 75rpx;
  display: flex;
  padding-top: 45rpx;
  justify-content: space-between;
}

.play_header_l{
  display: flex;
  padding-left: 25rpx;
  align-items: center;
}

.play_image {
  width: 500rpx;
  height: 500rpx;
  margin: 80rpx auto;
  border-radius: 20rpx;
  background-color: #555;
  box-shadow: 20rpx 20rpx 10rpx rgba(70, 66, 66, 0.747);
}

.music_record {
  width: 400rpx;
  height: 400rpx;
  border-radius: 50%;
  background-color: #000;
  /* animation: headRotate 6s linear infinite; */
}

.music_animate {
  animation: headRotate 6s linear infinite;
}

.play_progress_bar_box {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.play_progress_bar_line{
  width: 450rpx;
  padding: 10rpx;
  border-radius: 25rpx;
  background-color: rgb(177, 155, 155);
}

.play_progress_bar_info{
  width: 150rpx;
  color: #fff;
  font-size: 12px;
  text-align: center;
  display: inline-block;
}

.button_group {
  margin-top: 100rpx;
}
.mini_button  {
  width: 500rpx;
  height: 80rpx;
  display: flex;
  margin: 0 auto;
  border-radius: 40rpx;
  align-items: center;
  margin-bottom: 50rpx;
  justify-content: space-around;
  background-color: rgba(153, 153, 153, 0.185);
}

.play_buttom {
  display: flex;
  width: 650rpx;
  height: 180rpx;
  margin: 0 auto;
  align-items: center;
  border-radius: 20rpx;
  justify-content: space-around;
  background-color: rgba(10, 10, 10, 0.63);
}

.play_buttom_item {
  width: 150rpx;
  height: 150rpx;
  border-radius: 20rpx;
  background-color: #555;
}

.play_Previous{

}

.play_sopt {

}

.play_Next {
  transform: rotate(180deg);

}
.stop_but_icon{
  width:80rpx;
  height:80rpx;
  color: #fff;
  line-height: 80rpx;
  font-weight: bold;
  text-align: center;
  border-radius: 50%;
  border: 6rpx solid #fff;
}

.flexStyle {
  display: flex;
  align-items:center;
  justify-content: center;
}


/* pages/list/pages/musicList/musicList.wxss */
.music_lyric_box{
  height: 100vh;
   color: #fff;
  background-color: rgba(0, 0, 0, 0.774);
}
.musicListbox{
  padding: 20rpx;
  
}
.listItem{
  width: 100%;
  height: 180rpx;
  padding: 20rpx;
  display: flex;
  position: relative;
  border-radius: 20rpx;
  box-sizing: border-box;
  background-color: rgba(31, 28, 28, 0.671);
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.mini_buttom {
  position: absolute;
  width: 200rpx;
  height: 100rpx;
  right: 20rpx;
  top:50%;
  transform: translate(120%, -50%);
  background-color: #fff;
}

.list_img image{
  width: 140rpx;
  height: 140rpx;
  margin-right: 20rpx;
  background-color: rgba(15, 15, 15, 0.671);

}
.list_cot{
  flex: 1;
  line-height: 48rpx;
  
}
.list_cot .title{
  
  font-size: 14px;
  font-weight: 700;
}
.list_cot .author{
  font-size: 12px;
}
.music_content{
  font-size: 12px;
}

.msgerr{
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
}

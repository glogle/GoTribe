<!--components/g-ui/g-grids/index.wxml-->
<view class="page">
    <view>
        <view class="g_flex">
          <view class="flex_box"  bindtap="bindEpidemicSituation">
              <block wx:for="{{grids}}" wx:key="*this" wx:for-item="item" wx:for-index="index">
              <view class="g_item_box" id="{{item.title}}">
               <view class="g_item">
                  <image class="weui-grid__icon" src="{{item.icone}}" />
                  <view>{{item.title}}</view>
               </view>
              </view>
            </block>
          </view>
        </view>
    </view>
</view>

